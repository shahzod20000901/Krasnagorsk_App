<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Top toolbar -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relLayou1">

        <include layout="@layout/layout_top_tabs"/>


    </RelativeLayout>

    <!-- Middle Section -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relLayou2">

        <include layout="@layout/layout_center_viewpager"/>

        <Button
            android:id="@+id/add_product"
            android:layout_width="390dp"
            android:layout_height="63dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="557dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/design_btn"
            android:text="+ Разместить объвление"
            android:textColor="@color/white" />


    </RelativeLayout>


    <!-- Bottom navigation view ex -->
    <RelativeLayout
        android:id="@+id/relLayou3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/layout_bottomnavigationviewex" />

    </RelativeLayout>


</RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>