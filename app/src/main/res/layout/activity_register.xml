<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".UI.RegisterActivity">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@drawable/goods"
        android:layout_marginTop="50dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Регистрация"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:gravity="center"
        android:layout_marginTop="30dp"
        />

    <EditText
        android:id="@+id/id_username"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        android:hint="Ваше имя"
        android:padding="8dp"
        android:textColorHint="#535151"
        android:background="@drawable/edit_design"
        android:textColor="@color/white"
        />

    <EditText
        android:id="@+id/id_email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        android:hint="Электронная почта"
        android:inputType="textEmailAddress"
        android:padding="8dp"
        android:textColorHint="#535151"
        android:background="@drawable/edit_design"
        android:textColor="@color/white"
        />

    <EditText
        android:id="@+id/id_phone_number"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        android:hint="Номер телефона"
        android:inputType="number"
        android:padding="8dp"
        android:textColorHint="#535151"
        android:background="@drawable/edit_design"
        android:textColor="@color/white"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Только мобильные номер телефона"
        android:textColor="@color/colorSecondaryText"
        android:textSize="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        />

    <EditText
        android:id="@+id/id_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        android:hint="Пароль"
        android:padding="8dp"
        android:inputType="textPassword"
        android:textColorHint="#535151"
        android:background="@drawable/edit_design"
        android:textColor="@color/white"
        />

    <EditText
        android:id="@+id/id_password_check"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:inputType="textPassword"
        android:layout_marginTop="20dp"
        android:hint="Пароль ещё раз"
        android:padding="8dp"
        android:textColorHint="#535151"
        android:background="@drawable/edit_design"
        android:textColor="@color/white"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Зарегистрироваться"
        android:background="@drawable/design_btn"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:id="@+id/btn_sign_up_user"/>

    <ProgressBar
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:id="@+id/id_progressBar"
        android:visibility="invisible"/>


</LinearLayout>